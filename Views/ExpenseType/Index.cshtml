@model IEnumerable<InAndOut.Models.ExpenseType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Types</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-area="" asp-controller="ExpenseType" asp-action="Create">Create New Expense Type</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Type
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var expenseType in Model)
                {
                    <tr>
                        <td width="30%">@expenseType.Name</td>
                        <td width="40%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@expenseType.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@expenseType.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>No Items created yet!</h2>
    }
</div>